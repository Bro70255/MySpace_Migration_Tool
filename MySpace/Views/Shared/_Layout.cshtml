<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MySpace</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link href="~/css/site.css?v=@DateTime.Now.Ticks" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js?v=@DateTime.Now.Ticks"></script>
</head>

<body>

    <!-- NAVIGATION -->
    <header>
        <nav class="navbar navbar-expand-sm nav-modern">
            <div class="container-fluid">

                <!-- BRAND -->
                <a class="navbar-brand nav-brand-modern"
                   asp-controller="Home"
                   asp-action="Dashboard">
                    MySpace
                </a>

                <!-- MOBILE TOGGLE -->
                <button class="navbar-toggler text-white" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Registration" ? "active-link" : "")"
                               asp-controller="Home"
                               asp-action="Registration">
                                Registration
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Registration_Report" ? "active-link" : "")"
                               asp-controller="Home"
                               asp-action="Registration_Report">
                                Registration Report
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Dashboard" ? "active-link" : "")"
                               asp-controller="Home"
                               asp-action="MySpace_Dashboard">
                                Dashboard
                            </a>
                        </li>

                        <!-- BLUE PRINT PROJECT WITH SUB MENU -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(ViewBag.Active == "BluePrint" ? "active-link" : "")"
                               href="#"
                               id="blueprintDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Blue Print Project
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end glass-dropdown"
                                aria-labelledby="blueprintDropdown">

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Home"
                                       asp-action="Upload">
                                        <i class="bi bi-upload me-2"></i> Upload
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Home"
                                       asp-action="Review">
                                        <i class="bi bi-eye me-2"></i> Review
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Home"
                                       asp-action="Blueprint">
                                        <i class="bi bi-diagram-3 me-2"></i> Blueprint
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "Convert" ? "active-link" : "")"
                               asp-controller="Home"
                               asp-action="ConvertProject">
                                Convert Project
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Active == "AI" ? "active-link" : "")"
                               asp-controller="Home"
                               asp-action="AISelection">
                                AI Selection
                            </a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- PAGE CONTENT -->
    <div class="container content-wrapper">
        <div class="glass-body">
            @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="footer-modern text-center">
        <strong>© @DateTime.Now.Year — MySpace</strong>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
